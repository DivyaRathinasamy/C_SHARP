@model Result;

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dojo Survey</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>

<body>
  <h1>Welcome to my page!</h1>
  <div class="container">

    <form action="result" method="POST">
      <label for="name">Your Name:</label>
      <input asp-for="Name"
     type="text" name="name" id="name">
     <span asp-validation-for="Name" class="text-danger"></span><br>

      <br>
      <label for="location">Dojo Location:</label>
      <select asp-for="Location" id="location" name="location">
        <option value="Bellevue">Bellevue</option>
        <option value="San Jose">San Jose</option>
        <option value="Dallas">Dallas</option>

      </select>
      <span asp-validation-for="Location" class="text-danger"></span><br>

      <br>
      <label for="language">Favorite Language:</label>
      <select asp-for="Language" id="language" name="language">
        <option value =""></option>
        <option value="Python">Python</option>
        <option value="C#">C#</option>
        <option value="JavaScript">JavaScript</option>
        <option value="Java">Java</option>
      </select>
      <span asp-validation-for="Language" class="text-danger"></span><br>

      <br>

      <label for="comments">Comment (Optional):</label>
      <textarea asp-for="Comment" id="comment" name="comment"></textarea>
      <span asp-validation-for="Comment" class="text-danger"></span><br>
      <button type="Submit">Submit</button>


    </form>

</body>

</html>
